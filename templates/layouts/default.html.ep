<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    %= stylesheet '/css/style.css'
    %= stylesheet '/css/bootstrap.min.css'
    %= stylesheet '/css/bootstrap-responsive.min.css'
    %= javascript '/js/html5.js'
    %= javascript '/js/jquery.min.js'
    %= javascript '/js/bootstrap.min.js'
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
      <% if (user->is_registred()) { %>
        <button class="btn alignright" data-href="<%= url_for 'user_home' %>"><%= user->username %></button>
      <% } else { %>
        <a href="<%= url_for 'user_login_form' %>">Sign in</a> /
        <a href="<%= url_for 'user_reg_form' %>">Sign up</a>
      <% } %>
        </div>
      </div>
    </div>
    <div class="container">
      %= content
    </div>
  </body>
</html>
