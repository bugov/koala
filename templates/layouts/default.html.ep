<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    %= stylesheet '/css/bootstrap.min.css'
    %= stylesheet '/css/bootstrap-responsive.min.css'
    %= stylesheet '/css/style.css'
    %= javascript '/js/html5.js'
    %= javascript '/js/jquery.min.js'
    %= javascript '/js/bootstrap.min.js'
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/"><img src="/pic/logo.png"> Koala</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li>
                <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)"><%= 'Pages' %></a>
                <ul class="dropdown-menu">
                  <li><a href="<%= url_for 'admin_page_list' %>"><%= 'List' %></a></li>
                  <li><a href="<%= url_for 'admin_page_create' %>"><%= 'Create new' %></a></li>
                </ul>
              </li>
              <li>
                <a href="<%= url_for 'admin_user_list' %>"><%= 'Users' %></a>
              </li>
            </ul>
          </div>
      <% if (user->is_registred()) { %>
        <button class="btn alignright" data-href="<%= url_for 'user_home' %>">
          <i class="icon-user"></i> <%= user->username %></button>
      <% } else { %>
        <a href="<%= url_for 'user_login_form' %>">Sign in</a> /
        <a href="<%= url_for 'user_reg_form' %>">Sign up</a>
      <% } %>
        </div>
      </div>
    </div>
    <div class="container admin">
      <h1 class="title"><%= title %></h1>
      %= content
    </div>
  </body>
</html>
