% layout 'default';
% title 'Sign Up';

<form method="post" action="<%= url_for 'user_reg' %>">
<table>
    <tr>
        <td>Name</td>
        <td><input name="username"></td>
    </tr>
    <tr>
        <td>E-mail</td>
        <td><input name="email"></td>
    </tr>
    <tr>
        <td>Password</td>
        <td><input name="password" type="password"></td>
    </tr>
    <tr>
        <td></td>
        <td><input type="submit"></td>
    </tr>
</table>
</form>