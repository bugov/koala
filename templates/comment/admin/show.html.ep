% layout 'default';
% title 'Edit comment â€” #' . $comment->id;

<form action="<%= url_for 'admin_comment_edit', id => $comment->id %>" method="post">
<table class="table">
  <tr>
    <td><label class="span2">Page</label></td>
    <td><a href="<%= url_for 'admin_page_show', id => $comment->page_id %>"><%= $comment->page->title %></td>
  </tr>
  <tr>
    <td><label class="span2">Status</label></td>
    <td><select class="span10" name="status">
      <option value="0" <% if (!$comment->status) {%> selected="selected" <%} %> >not approved</option>
      <option value="1" <% if ( $comment->status) {%> selected="selected" <%} %> >approved</option>
    </select></td>
  </tr>
  <tr>
    <td><label class="span2">Create date</label></td>
    <td><%= dt $comment->create_at %></td>
  </tr>
  <tr>
    <td><label class="span2">Title</label></td>
    <td><input class="span10" type="text" name="title" value="<%= $comment->title %>"></td>
  </tr>
  <tr>
    <td><label class="span2">Author <a href="<%= url_for 'admin_user_show', id => $comment->author_id %>"><%= ($comment->author_id ? 'registred' : '') %></a></label></td>
    <td><input class="span10" type="text" name="username" value="<%= $comment->username %>"></td>
  </tr>
  <tr>
    <td><label class="span2">Text</label></td>
    <td>
      <textarea class="span10" name="text"><%= $comment->text %></textarea>
    </td>
  </tr>
  <tr>
    <td colspan=2 style="text-align: center">
      <button class="btn" type="submit">Edit</button>
      <button class="btn" type="reset">Cancel</button>
    </td>
  </tr>
</table>
</form>