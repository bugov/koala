% layout 'default';
% title 'Category list';

% content_for control => begin
<a href="<%= url_for 'admin_category_create' %>" class="btn btn-success">Create new</a>
% end

<table class="wide table">
  <tr>
    <th>#</th>
    <th>Url</th>
    <th>Title</th>
    <th>Legend</th>
  </tr>
<% for my $item (@$list) { %>
  <tr onClick="window.location='<%= url_for 'admin_category_show', id => $item->id %>'">
    <td><%= $item->id %></td>
    <td><%= $item->url %></td>
    <td><%= $item->title %></td>
    <td><%= substr $item->legend, 0, 64 %> <%= (length $item->legend > 64 ? '...' : '') %></td>
  </tr>
<% } %>
</table>

%= paginator 'admin_category_list', int stash('page'), $count, $limit