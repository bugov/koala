% layout 'front';
% title 'Bugov\'s blog';
% use Mojo::ByteStream 'b';

% for my $item (@$list) {
<div>
  <h2><%= $item->title %></h2>
  <p>
    % if ($item->legend) {
      <%=b $item->legend %>
    % } else {
      <%=b $item->text %>
    %}
  </p>
  <p>
    <a href="<%= $item->url %>">more</a>
  </p>
</div>
% }